# Neural Terminal Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenRouter API Configuration (REQUIRED)
# ============================================================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=nvapi-your-own-key

# Base URL for OpenRouter API (optional, defaults to production)
OPENROUTER_BASE_URL=https://integrate.api.nvidia.com/v1

# Request timeout in seconds (optional, defaults to 60)
OPENROUTER_TIMEOUT=60

# ============================================================================
# Application Configuration
# ============================================================================
# Application environment: development | staging | production
APP_ENV=development

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Database URL (SQLite only for now)
# Relative paths are converted to absolute automatically
DATABASE_URL=sqlite:///neural_terminal.db

# ============================================================================
# Circuit Breaker Configuration
# ============================================================================
# Number of failures before circuit opens
CIRCUIT_FAILURE_THRESHOLD=5

# Seconds to wait before attempting recovery
CIRCUIT_RECOVERY_TIMEOUT=30

# ============================================================================
# Budget Configuration (Optional)
# ============================================================================
# Maximum budget in USD per conversation session
# BUDGET_LIMIT=5.00

# ============================================================================
# Development Configuration
# ============================================================================
# Streamlit configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
